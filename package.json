{
  "name": "@kirbydesign/linting",
  "version": "0.1.0",
  "description": "Linting rules, used by kirbydesign, but available for anyone to use",
  "scripts": {
    "build": "npm run build:tslint",
    "build:tslint": "npm run lint:ts && npm run build:tslint:src && npm run build:tslint:copy-config && npm run build:tslint:copy-package.json",
    "build:tslint:src": "tsc",
    "build:tslint:copy-config": "cp configurations/* ./dist",
    "build:tslint:copy-package.json": "cp package.json ./dist",
    "clean": "rm -rf ./dist",
    "lint:ts": "tslint src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kirbydesign/linting.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kirbydesign/linting/issues"
  },
  "homepage": "https://github.com/kirbydesign/linting#readme",
  "dependencies": {
    "tslint": "~5.9.1"
  },
  "devDependencies": {
    "@types/node": "~8.9.4",
    "prettier": "^1.15.3",
    "tslint": "~5.9.1",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "~3.1.1"
  }
}
